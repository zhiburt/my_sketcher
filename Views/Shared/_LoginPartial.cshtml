@using Microsoft.AspNetCore.Identity
@using lastVersionAuthe.Models
@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Mvc.Localization

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
     
        
        <ul class="navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">@UserManager.GetUserName(User)! <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li class="dropdown-item navbar-link"><i class="fa fa-cog"></i>  <a class="" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">@Localizer["Manage"]</a></li>
                    <li class="dropdown-item"><i class="fa fa-magic"></i>  <a class="" asp-area="" asp-controller="Manual" asp-action="Index" title="Manage">@Localizer["Manual"]</a></li>
                    <li class="dropdown-item divider"></li>
                    <li class="dropdown-item">
                        <button type="submit" class="btn btn-block navbar-btn navbar-link"><i class="fa fa-power-off"></i>@Localizer["LogOut"]</button></li>
                </ul>
            </li>
        </ul>
    </form>


    
}
else
{
    <ul class="navbar-nav navbar-right">
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">@Localizer["Register"]</a></li>
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">@Localizer["LogIn"]</a></li>
    </ul>
}
