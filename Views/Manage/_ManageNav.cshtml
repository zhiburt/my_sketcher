@using lastVersionAuthe.Views.Manage
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav flex-column">
    <li class="@ManageNavPages.IndexNavClass(ViewContext) nav-item"><a class="nav-link" asp-action="Index">Profile</a></li>
    <li class="@ManageNavPages.ChangePasswordNavClass(ViewContext) nav-item"><a class="nav-link" asp-action="ChangePassword">Password</a></li>
    @if (hasExternalLogins)
    {
        <li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext) nav-item"><a class="nav-link" asp-action="ExternalLogins">External logins</a></li>
    }
    <li class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) nav-item"><a class="nav-link" asp-action="TwoFactorAuthentication">Two-factor authentication</a></li>
    <li class="@ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext) nav-item"><a class="nav-link" asp-action="AddAdditionalInformation">Add additional Information</a></li>
</ul>

